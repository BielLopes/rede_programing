    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/tp2_redes/client",
            "args": ["127.0.0.1", "5151"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/tp2_redes",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]        
        }
    ]
}